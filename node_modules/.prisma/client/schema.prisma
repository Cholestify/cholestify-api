datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  password  String
  email     String?   @unique
  birthdate DateTime? // Use DateTime for date type
  gender    Gender? // Use an enum for gender
  weight    Float? // Nullable float
  height    Float? // Nullable float
  createdAt DateTime  @default(now()) // Timestamp for creation
  updatedAt DateTime  @updatedAt // Timestamp for updates

  @@map("users") // Maps the model to the users table
}

enum Gender {
  male
  female
}
